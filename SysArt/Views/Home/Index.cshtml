@model IEnumerable<SysArt.Models.Articles>

@{
    ViewData["Title"] = "Strona główna";
}

<!-- Main content -->
<div class="container my-5">
    <h1 class="text-center mb-5 display-6 fw-bold">Ostatnie artykuły</h1>

    <!-- Filtr tematów -->
    <div class="mb-4 d-flex justify-content-center">
        <form method="get" class="d-flex align-items-center gap-2">
            <label class="form-label mb-0 fw-bold">Filtruj po temacie:</label>
            <select name="topicId" class="form-select w-auto">
                <option value="">Wszystkie tematy</option>
                @foreach (var topic in ViewBag.Topics as IEnumerable<SysArt.Models.Topics>)
                {
                        <option value="@topic.Id">@topic.Name</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Filtruj</button>
        </form>
    </div>

    @if (!Model.Any())
    {
            <p class="text-center fs-5">Brak artykułów do wyświetlenia.</p>
    }
    else
    {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var article in Model)
            {
                        <div class="col">
                            <div class="card article-card h-100 border-0 shadow-lg">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@article.Title</h5>
                                    <p class="card-text text-truncate" style="max-height: 90px;">
                                @article.Content
                                    </p>
                                    <p class="mt-auto mb-1"><strong>Temat:</strong> @article.Topic?.Name</p>
                                    <p class="mb-2"><strong>Autorzy:</strong>
                                @if (!string.IsNullOrWhiteSpace(article.CoAuthors))
                                {
                                    @string.Join(", ", article.CoAuthors.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries))
                                }
                                else
                                {
                                                <span>Brak</span>
                                }
                                    </p>
                                    <p class="text-muted mb-3"><small>Data publikacji: @article.CreatedAt.ToShortDateString()</small></p>
                                    <a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id" class="btn btn-outline-primary mt-auto">Zobacz artykuł</a>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
</div>

<style>
.article-card {
    background: linear-gradient(145deg, #f8f9fa, #e9ecef);
    border-radius: 1rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.article-card:hover {
    transform: rotateX(5deg) rotateY(5deg) translateY(-10px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.25);
}
.card-title {
    font-size: 1.3rem;
    font-weight: 600;
}
.card-text {
    font-size: 0.95rem;
}
</style>
